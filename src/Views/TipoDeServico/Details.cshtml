@model TCC.Agenda.Models.TipoDeServicoModel

@{
    ViewData["Title"] = "Detalhes";
}

<h1>Detalhes do Serviço Cadastrado</h1>

<div>    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Detalhes)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Detalhes)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DuracaoMinutos)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DuracaoMinutos)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ValorCobrado)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ValorCobrado)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ativo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ativo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Empresa)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Empresa.Nome)
        </dd>
    </dl>
</div>

<form asp-action="Detalhes">
    <input type="hidden" asp-for="TipoDeServicoId" />
    <a asp-action="Index"><i class="bi bi-arrow-return-left" Title="Voltar para tela inicial"></i></a>
    <a asp-action="Edit" asp-route-id="@Model.TipoDeServicoId"><i class="bi bi-pencil-square" title="Editar"></i></a>

</form>
