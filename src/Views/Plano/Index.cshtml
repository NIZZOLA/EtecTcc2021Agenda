@model IEnumerable<TCC.Agenda.Models.PlanoModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Criar">Incluir</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValorMensal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LimiteDeUsuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ativo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValorMensal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LimiteDeUsuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ativo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PlanoId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.PlanoId">Consultar</a> |
                <a asp-action="delete" asp-route-id="@item.PlanoId"><i class="bi bi-backspace"></i>Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
